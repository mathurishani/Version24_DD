// manifest.json
{
  "manifest_version": 3,
  "name": "Minimal Bookmark Manager",
  "version": "1.2",
  "description": "A minimalistic Chrome extension for bookmark management.",
  "permissions": ["bookmarks", "storage"],
  "commands": {
    "add-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "Add a bookmark"
    },
    "delete-bookmark": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+Shift+K"
      },
      "description": "Delete a bookmark"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
